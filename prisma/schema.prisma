datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

/// NEXT-AUTH

model User {
  id            String          @id @default(cuid())
  name          String?
  lastName      String?
  phoneNumber   String?
  etage         String?
  department    String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  // Optional for WebAuthn support
  Authenticator Authenticator[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Below you can start customizing stuff

  roles Role[]

  createdProjects          Project[] @relation("createdProjects")
  managedProjects          Project[] @relation("managedProjects")
  contactPersonForProjects Project[] @relation("contactPersonForProjects")
  participatingProjects    Project[]

  createdRequirements Requirement[] @relation("createdRequirements")

  createdTargets  Target[] @relation("createdTargets")
  assignedTargets Target[] @relation("assignedTargets")

  assignedWorkItems WorkItem[] @relation("assignedWorkItems")

  assignedRequirements Requirement[] @relation("assignedRequirements")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

/// INFOCUS

model Project {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  creator   User     @relation("createdProjects", fields: [creatorId], references: [id])
  creatorId String

  projectManager    User            @relation("managedProjects", fields: [projectManagerId], references: [id])
  projectManagerId  String
  projectCategory   ProjectCategory @relation(fields: [projectCategoryId], references: [id])
  projectCategoryId String
  status            PROJECT_STATUS
  name              String
  building          Building        @relation(fields: [buildingId], references: [id])
  buildingId        String
  contactPerson     User            @relation("contactPersonForProjects", fields: [contactPersonId], references: [id])
  contactPersonId   String
  testBenchNumber   Float?

  startDate DateTime
  endDate   DateTime

  projectType String // ???

  costCenter   CostCenter @relation(fields: [costCenterId], references: [id])
  costCenterId String

  plannedBudget Float?

  calculateTargetFromSubProjectSpecifications Boolean @default(false)

  description String?

  requirements Requirement[]
  targets      Target[]
  participants User[]

  rootFolder   Folder @relation(fields: [rootFolderId], references: [id])
  rootFolderId String
}

model CostCenter {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name String

  projects Project[]
}

model Building {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name String

  floors Floor[]

  projects Project[]
}

model Floor {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name String

  building   Building @relation(fields: [buildingId], references: [id])
  buildingId String

  rooms Room[]
}

model Room {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name String

  floor   Floor  @relation(fields: [floorId], references: [id])
  floorId String
}

model ProjectCategory {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name String

  projects Project[]
}

model Requirement {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  creator   User     @relation("createdRequirements", fields: [creatorId], references: [id])
  creatorId String

  name String

  description String

  assignedToUser   User   @relation("assignedRequirements", fields: [assignedToUserId], references: [id])
  assignedToUserId String

  requirementCategory REQUIREMENT_CATEGORY

  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}

model WorkItem {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name String

  status   WORK_ITEM_STATUS
  priority PRIORITY

  startDate DateTime
  endDate   DateTime

  assignedToUser   User   @relation("assignedWorkItems", fields: [assignedToUserId], references: [id])
  assignedToUserId String

  parent              WorkItem? @relation("dependsOnWorkItem")
  dependsOnWorkItem   WorkItem? @relation("dependsOnWorkItem", fields: [dependsOnWorkItemId], references: [id])
  dependsOnWorkItemId String?   @unique

  dependencyType DEPENDENCY_TYPE?

  ressources String[] // ???

  description String

  attachments File[]
}

// ????

model File {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  fileType FILE_TYPE

  attachedToWorkItems WorkItem[]
}

model Folder {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  project Project[]
}

model Target {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  creator   User     @relation("createdTargets", fields: [creatorId], references: [id])
  creatorId String

  name String

  description String

  assignedToUser   User   @relation("assignedTargets", fields: [assignedToUserId], references: [id])
  assignedToUserId String

  targetCategory TARGET_CATEGORY

  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}

model Role {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name String

  users User[]
}

// ???
model Craft {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name String

  company String

  craftType   CraftType @relation(fields: [craftTypeId], references: [id])
  craftTypeId String

  color String
}

// ???
model CraftType {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name String

  crafts Craft[]
}

/// ENUMS

enum DEPENDENCY_TYPE {
  START_END
  START_START
  END_END
  END_START
}

enum WORK_ITEM_STATUS {
  IN_WORK
  CLOSED
  OPENED
  FINISHED
}

enum PRIORITY {
  LOW
  MEDIUM
  HIGH
  SUPER_HIGH
}

enum TARGET_CATEGORY {
  DATE
  COST
  PERFORMANCE
}

enum REQUIREMENT_CATEGORY {
  ORGANIZATIONAL
  TECHNICAL
}

enum PROJECT_STATUS {
  IN_WORK
  DELAYED
  CRITICAL
}

// Zu definieren was alles da sein sollte
enum FILE_TYPE {
  WORD
  TXT
}
